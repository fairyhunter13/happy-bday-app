{
  "$schema": "https://json.schemastore.org/jscpd.json",
  "threshold": 5,
  "minLines": 7,
  "minTokens": 60,
  "reporters": ["html", "json", "console"],
  "output": "./jscpd-report",
  "format": ["typescript", "javascript", "json", "yaml"],
  "ignore": [
    "**/node_modules/**",
    "**/dist/**",
    "**/coverage/**",
    "**/jscpd-report/**",
    "**/src/clients/generated/**",
    "**/tests/fixtures/**",
    "**/*.d.ts",
    "**/*.config.ts",
    "**/*.config.js",
    "**/drizzle.config.ts",
    "**/vitest.config.*.ts",
    "**/eslint.config.mjs",
    "**/.github/**",
    "**/docs/**",
    "**/plan/**",
    "**/backups/**",
    "**/grafana/**",
    "**/prometheus/**",
    "**/*.gen.ts",
    "**/*.gen.js",
    "**/scripts/**"
  ],
  "absolute": true,
  "gitignore": true,
  "blame": false,
  "silent": false,
  "exitCode": 1,
  "store": "memory"
}
