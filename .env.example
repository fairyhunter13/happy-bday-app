# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database (PostgreSQL)
DATABASE_URL=postgres://postgres:postgres_dev_password@localhost:5432/birthday_app
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres_dev_password
DATABASE_NAME=birthday_app
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_SSL=false

# RabbitMQ
RABBITMQ_URL=amqp://rabbitmq:rabbitmq_dev_password@localhost:5672
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=rabbitmq
RABBITMQ_PASSWORD=rabbitmq_dev_password
RABBITMQ_VHOST=/
RABBITMQ_QUEUE_NAME=birthday-messages
RABBITMQ_EXCHANGE_NAME=birthday-exchange
RABBITMQ_DLX_NAME=birthday-dlx
RABBITMQ_DLQ_NAME=birthday-dlq

# Redis (Optional - for caching)
REDIS_URL=redis://:redis_dev_password@localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_dev_password
REDIS_DB=0

# Email Service (Digital Envision vendor)
EMAIL_SERVICE_URL=https://email-service.digitalenvision.com.au
EMAIL_SERVICE_TIMEOUT=30000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=5
QUEUE_RETRY_DELAY=2000
QUEUE_RETRY_BACKOFF=exponential

# CRON Schedules
CRON_DAILY_SCHEDULE=0 0 * * *          # Daily at midnight UTC
CRON_MINUTE_SCHEDULE=* * * * *         # Every minute
CRON_RECOVERY_SCHEDULE=*/10 * * * *    # Every 10 minutes

# Circuit Breaker
CIRCUIT_BREAKER_TIMEOUT=10000
CIRCUIT_BREAKER_ERROR_THRESHOLD=50
CIRCUIT_BREAKER_RESET_TIMEOUT=30000
CIRCUIT_BREAKER_VOLUME_THRESHOLD=10

# Rate Limiting
RATE_LIMIT_ENABLED=true                     # Set to false to disable rate limiting (for performance testing)
RATE_LIMIT_WINDOW_MS=900000                 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100                 # Global default max requests per window
RATE_LIMIT_CREATE_USER_MAX=10               # Max create user requests per minute
RATE_LIMIT_READ_USER_MAX=100                # Max read user requests per minute
RATE_LIMIT_UPDATE_USER_MAX=20               # Max update user requests per minute
RATE_LIMIT_DELETE_USER_MAX=10               # Max delete user requests per minute

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
