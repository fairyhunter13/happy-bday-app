{
  "dashboard": {
    "title": "Birthday Scheduler - Security Monitoring",
    "tags": [
      "birthday-scheduler",
      "security",
      "authentication",
      "production"
    ],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-6h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Authentication Failures",
        "type": "graph",
        "gridPos": {
          "x": 0,
          "y": 0,
          "w": 12,
          "h": 8
        },
        "targets": [
          {
            "expr": "sum(rate(birthday_scheduler_auth_failures_total{namespace=\"$namespace\", instance=~\"$instance\"}[$interval])) by (failure_type)",
            "legendFormat": "{{failure_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "label": "Failures/sec",
            "format": "short"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [
                  0.5
                ],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": [
                  "A",
                  "5m",
                  "now"
                ]
              },
              "reducer": {
                "type": "sum"
              },
              "type": "query"
            }
          ],
          "frequency": "60s",
          "handler": 1,
          "name": "High Auth Failure Rate",
          "noDataState": "no_data"
        },
        "description": "Panel 1: Authentication Failures"
      },
      {
        "id": 2,
        "title": "Auth Failures (24h)",
